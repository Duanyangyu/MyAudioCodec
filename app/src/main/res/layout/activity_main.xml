<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.audio.duanyy.MainActivity">

    <TextView
        android:id="@+id/temp_src"
        android:text="源文件src路径:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/temp_src"
        android:layout_marginLeft="10dp"
        android:id="@+id/textview_src"/>


    <TextView
        android:id="@+id/temp_dst"
        android:text="目标文件dst路径:"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/temp_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/temp_dst"
        android:layout_below="@id/textview_src"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textview_dst"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="btnStartCodec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始转码音频文件"/>

        <Button
            android:onClick="btnStartDecodeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始解码视频"/>

        <Button
            android:onClick="btn2SoftInputSurfaceAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SoftInputSurfaceAct"/>

    </LinearLayout>


</RelativeLayout>
